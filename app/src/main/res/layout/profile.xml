<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"


    android:orientation="vertical"
    android:paddingTop="10dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/pic" />

    <TextView
        android:id="@+id/txtViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="serif-monospace"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="#D3C130"
        android:textSize="24sp"
        android:textStyle="normal|bold" />


    <EditText
        android:id="@+id/txtHob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Hobbies"
        android:inputType="text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorHint="@color/design_default_color_on_primary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonAdd"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#1A1111"
        android:text="Add"
        android:textColor="#DCDCDC"
        android:textStyle="normal|bold"

        />

    <TextView
        android:id="@+id/VisText"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#1A1515"
        android:backgroundTint="#502C2323"
        android:ems="10"
        android:fontFamily="casual"

        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FAF9F9"
        android:textColorHint="@color/design_default_color_on_primary"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:visibility="gone" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:backgroundTint="#BCAD07" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#3F231B1B"
                android:ems="10"
                android:fontFamily="serif"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="@string/bio"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/design_default_color_on_primary"
                android:textSize="20sp"
                android:textStyle="normal|bold|italic"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>