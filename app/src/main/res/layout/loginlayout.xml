<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >


    <ImageView
        android:id="@+id/image1"
        android:layout_width="405dp"
        android:layout_height="240dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toTopOf="@+id/word1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039"
        app:srcCompat="@drawable/protien" />

    <EditText
        android:id="@+id/name1"


        android:layout_width="270dp"
        android:layout_height="63dp"
        android:layout_marginTop="348dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/pass1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pass1"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/pass1"

        android:layout_width="270dp"
        android:layout_height="57dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/name1"

        />


    <TextView
        android:id="@+id/word1"
        android:layout_width="158dp"
        android:layout_height="47dp"
        android:layout_marginBottom="48dp"
        android:text="Log In"
        android:textAlignment="center"
        android:textColor="#19A1B6"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/name1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="Remember me"
        app:layout_constraintStart_toStartOf="@+id/pass1"
        app:layout_constraintTop_toBottomOf="@+id/pass1" />

    <Button
        android:id="@+id/signUpBtn1"
        style="@style/Widget.MaterialComponents.Button.TextButton"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:backgroundTint="#19A1B6"
        android:text="Sign Up"
        android:textColor="@color/white"

        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toEndOf="@+id/signInBtn1"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <Button
        android:id="@+id/signInBtn1"
        style="@style/Widget.MaterialComponents.Button.TextButton"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"


        android:layout_marginBottom="184dp"
        android:background="@null"
        android:backgroundTint="#19A1B6"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>